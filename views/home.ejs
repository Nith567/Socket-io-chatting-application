<!DOCTYPE html>
<html lang="en">
<head>
  
  <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
</head>
<body>
<h1>helloe</h1>

<input type="text" class="mssg">
<button onClick="sendMssg()">Send Message</button>
<h1></h1>

    <script>


const socket=io("http://localhost:3001")

socket.on("connection")

socket.on("message",(data)=>{
document.querySelector("h1").innerHTML=data;
})


const sendMssg=()=>{
  const mssginput=document.querySelector(".mssg")
  const value=mssginput.value;
  socket.emit('message',value);
}


    </script>
</body>
</html>